<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>GestionOfertas</servlet-name>
        <servlet-class>controladores.gestiones.GestionOfertas</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GestionSesiones</servlet-name>
        <servlet-class>controladores.gestiones.GestionSesiones</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GestionUsuarios</servlet-name>
        <servlet-class>controladores.gestiones.GestionUsuarios</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogicaReportes</servlet-name>
        <servlet-class>controladores.gestiones.LogicaReportes</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GeneradorReportes</servlet-name>
        <servlet-class>controladores.gestiones.GeneradorReportes</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GestionOfertas</servlet-name>
        <url-pattern>/GestionOfertas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GestionSesiones</servlet-name>
        <url-pattern>/GestionSesiones</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GestionUsuarios</servlet-name>
        <url-pattern>/GestionUsuarios</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogicaReportes</servlet-name>
        <url-pattern>/LogicaReportes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GeneradorReportes</servlet-name>
        <url-pattern>/GeneradorReportes</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
